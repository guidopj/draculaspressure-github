<html>
  <head><p class="lead">Your blood pressure records</p></head>
  <body>
    <% @rec.each do |r|%>
    <table border = "1" class="table table-striped"  id = "recordTable">  
   <tr>
      <td>id</td>
      <td>max</td>
      <td>min</td>
      <td>date</td>
      <td>name</td>
      <td>state</td>
   </tr>
   <tr>
      <td><%= r.id %></td>
      <td><%= r.max %></td>
      <td><%= r.min %></td>
      <td><%= r.date %></td>
     <td><%= r.name %></td>
     <td>
     <img src= <%= r.get_state_image %> width="25" height="25"/>	
    </td>  
    <td><button class = "btn btn-danger">Delete record</button></td>
    </tr>
  </table>
    <% end %>
  </br>
	<div class = "well">
	<a href="/blood_pressures/index"><button class = "btn btn-primary" id="GoBack">Go Back To Blood Pressures Index<button></a>  
	</div>
  </body>   
</html>
